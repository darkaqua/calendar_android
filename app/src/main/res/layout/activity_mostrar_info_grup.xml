<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.irene.calendar_android.CreacioGrups.ActivityMostrarInfoGrup">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="Informaci贸 grups"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@android:color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="Id"
                    android:textAllCaps="true"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textViewInfoGrupID"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="uuid"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="Nom Grup"
                    android:textAllCaps="true"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textViewInfoGrupNom"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="Nom empresa"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:text="Descripci贸"
                    android:textAllCaps="true"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewInfoGrupDescripcio"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="Descipci贸"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:text="Creaci贸"
                    android:textAllCaps="true"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewInfoGrupCreacio"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="Email"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="20"
                    android:padding="16dp"
                    android:text="Edit"
                    android:textAllCaps="true"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewInfoGrupEdit"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:background="#0000"
                    android:gravity="left"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:text="Telefon"
                    android:textColor="#a2a1b8"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray"
                android:visibility="visible" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
