<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.irene.calendar_android.Login.ActivityHome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/calendar_logo"
            android:layout_marginTop="20dp"
            android:id="@+id/imageView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextUser"
            android:layout_below="@+id/Titol"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:hint="Nom usuari" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_below="@+id/editTextUser"
            android:layout_alignLeft="@+id/editTextUser"
            android:layout_alignStart="@+id/editTextUser"
            android:layout_marginTop="42dp"
            android:hint="Contrasenya"
            android:layout_weight="0.01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />





        <Button
            android:text="Iniciar sessiÃ³"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnIniciar"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/editTextPassword"
            android:layout_alignEnd="@+id/editTextPassword"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignStart="@+id/editTextPassword" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnIniciar"
            android:layout_alignLeft="@+id/btnIniciar"
            android:layout_alignRight="@+id/btnIniciar"
            android:layout_alignStart="@+id/btnIniciar"
            android:layout_below="@+id/btnIniciar"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:text="Registrar-te" />

    </LinearLayout>

</RelativeLayout>
