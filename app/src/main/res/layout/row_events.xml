<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uuid"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/idEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="invisible"
               />
            <TextView
                android:id="@+id/idGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/uuidCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tarifa_1"
            android:layout_marginLeft="10dp"
            android:layout_width="335dp"
            android:layout_height="150dp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/relative_layout_background"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iconevents" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Nom event: "
                            android:textAllCaps="true"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtTitolEvent"
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data/Dia: "
                            android:textAllCaps="true"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtHoraEvent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength=""
                        android:text="hora/dia"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>