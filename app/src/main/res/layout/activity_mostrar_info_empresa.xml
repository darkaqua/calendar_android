                            android:textColor="#a2a1b8"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@android:color/darker_gray"
                        android:visibility="visible" />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
