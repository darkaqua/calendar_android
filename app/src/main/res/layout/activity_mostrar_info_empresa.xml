<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.irene.calendar_android.Companyies.ActivityMostrarInfoEmpresa">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:backgroundTint="@color/colorButton2"
        app:fabSize="mini"
        app:srcCompat="@drawable/icon_house" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Informació empresa"
            app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEliminarEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eliminar " />

                <Button
                    android:id="@+id/btnCreacioGrup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Creació Grup" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/toolbar"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@android:color/darker_gray"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="#0000"
                            android:gravity="left"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:text="Nom empresa"
                            android:textAllCaps="true"
                            android:textColor="#a2a1b8"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/textViewInfoEmpresaNom"
                            android:layout_width="237dp"
                            android:layout_height="wrap_content"
                            android:background="#0000"
                            android:gravity="left"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:text="Nom empresa"
                            android:textColor="#a2a1b8"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@android:color/darker_gray"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="#0000"
                            android:gravity="left"
                            android:maxLength="20"
                            android:padding="16dp"
                            android:text="Descripció"
                            android:textAllCaps="true"
                            android:textColor="#a2a1b8"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textViewInfoEmpresaDescripcio"
                            android:layout_width="237dp"
                            android:layout_height="wrap_content"
                            android:background="#0000"
                            android:gravity="left"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:text="Descipció"
                            android:textColor="#a2a1b8"
                            android:textSize="16sp" />
